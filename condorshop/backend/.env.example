# ============================================
# CONFIGURACIÓN BÁSICA DE DJANGO
# ============================================

# Clave secreta de Django (OBLIGATORIO)
# Generar con: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here

# Modo debug (True para desarrollo, False para producción)
DEBUG=True

# Hosts permitidos (separados por comas)
ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================
# BASE DE DATOS - PostgreSQL
# ============================================

# Nombre de la base de datos
DB_NAME=condorshop

# Usuario de la base de datos
DB_USER=postgres

# Contraseña de la base de datos
DB_PASSWORD=your-database-password

# Host de la base de datos (localhost para local, db.xxxxx.supabase.co para Supabase)
DB_HOST=localhost

# Puerto de la base de datos (5432 para PostgreSQL)
DB_PORT=5432

# ============================================
# AUTENTICACIÓN JWT
# ============================================

# Horas de expiración del token JWT (default: 24)
JWT_EXPIRATION_HOURS=24

# ============================================
# RECUPERACIÓN DE CONTRASEÑA
# ============================================

# URL del frontend para reset de contraseña
FRONTEND_RESET_URL=http://localhost:5173/reset-password

# Horas de validez del token de reset (default: 1)
PASSWORD_RESET_TIMEOUT_HOURS=1

# ============================================
# CONFIGURACIÓN DE EMAIL
# ============================================

# Backend de email (console para desarrollo, smtp para producción)
# Opciones: django.core.mail.backends.console.EmailBackend (desarrollo)
#           django.core.mail.backends.smtp.EmailBackend (producción)
#           anymail.backends.mailgun.EmailBackend (Mailgun)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Configuración SMTP (si EMAIL_BACKEND es smtp)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
DEFAULT_FROM_EMAIL=noreply@condorshop.cl

# Configuración Mailgun (si EMAIL_BACKEND es anymail.backends.mailgun.EmailBackend)
# ANYMAIL_MAILGUN_API_KEY=your-mailgun-api-key
# ANYMAIL_MAILGUN_SENDER_DOMAIN=mg.example.com

# ============================================
# CORS Y SEGURIDAD
# ============================================

# Orígenes permitidos para CORS (separados por comas)
# Ejemplo: http://localhost:5173,https://condorshop.cl
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Orígenes confiables para CSRF (separados por comas)
CSRF_TRUSTED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# ============================================
# SESIONES (Solo desarrollo)
# ============================================

# Tiempo de expiración de sesión en desarrollo (segundos, default: 1800 = 30 min)
DEV_SESSION_COOKIE_AGE=1800

# ============================================
# WEBPAY PLUS - Transbank
# ============================================

# Ambiente de Webpay (integration para pruebas, production para producción)
WEBPAY_ENVIRONMENT=integration

# Código de comercio (597055555532 para integración, tu código real para producción)
WEBPAY_COMMERCE_CODE=597055555532

# API Key de Webpay (clave de integración por defecto, cambiar en producción)
WEBPAY_API_KEY=579B532A7440BB0C9079DED94D31EA1615BACEB56610332264630D42D0A36B1C

# URL de retorno desde Webpay (endpoint del backend)
WEBPAY_RETURN_URL=http://localhost:8000/api/payments/return/

# URL final después del pago (página del frontend)
WEBPAY_FINAL_URL=http://localhost:5173/payment/result

# ============================================
# PRODUCCIÓN (Solo si DEBUG=False)
# ============================================

# Redirigir HTTP a HTTPS (True en producción)
# SECURE_SSL_REDIRECT=True
