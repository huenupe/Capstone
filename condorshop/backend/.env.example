###########
# CondorShop Backend - PLANTILLA DE VARIABLES DE ENTORNO
# 
# INSTRUCCIONES:
# 1. Copia este archivo: cp .env.example .env
# 2. Edita .env con tus valores reales
# 3. NUNCA subas .env a Git (ya está en .gitignore)
#
# Este archivo (.env.example) SÍ se versiona para que el equipo
# sepa qué variables configurar.
###########

# === Core Django ===
SECRET_KEY=change-me-to-a-long-random-string
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# === Database (MySQL 8) ===
DB_NAME=condorshop
DB_USER=condorshop_user
DB_PASSWORD=changeme
DB_HOST=localhost
DB_PORT=3306

# === CORS / CSRF ===
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
CSRF_TRUSTED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# === Authentication ===
JWT_EXPIRATION_HOURS=24

# === Password Reset ===
FRONTEND_RESET_URL=http://localhost:5173/reset-password
PASSWORD_RESET_TIMEOUT_HOURS=1

# === Email (ejemplo SMTP Gmail) ===
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
EMAIL_HOST_USER=condorshop.testing@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@condorshop.cl

# === Seguridad / Sesiones ===
SECURE_SSL_REDIRECT=False
DEV_SESSION_COOKIE_AGE=1800

# === Logging ===
LOG_LEVEL=INFO
